    <aside id="search-aside">
    	<div id="search-container">
    		<h2>Search</h2>
    		<%= form_tag(services_search_path, method: "get") do %>
	    		<p>
    			<%= label_tag(:category, "Category:") %>
    			<%= text_field_tag :category, (@category or nil) %>
    			</p>
          <p>
            <%= label_tag(:title, "Name:") %>
            <%= text_field_tag :title, (@title or nil) %>
          </p>
  				<p>
  				<%= submit_tag("Search") %>
  				</p>
    		<% end %>
    	</div>
    </aside>